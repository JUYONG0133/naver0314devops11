package day0319;

import java.util.Date;

public class Ex09_DateCalendar {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Date 클래스를 이용해서 년,월,일,시,분,초 얻기(jdk1.1 이후 Deprecate 되고 Calender를 권장하나 여히 많이 사용중)
		Date date = new Date(); // 디폴트로 생성시 현재 날짜와 시간을 얻는다,
		int year = date.getYear();
		int month = date.getMonth();
		int day = date.getDate();
		int week = date.getDay();//요일 (0 : 일 ~ 6 : 토)
		System.out.println("현재년도 : "+(year+1900));
		System.out.println("현재 월 : "+month);
		System.out.println("햔재 일 : "+day);
		System.out.println("현재 요일 : "+week);
		
	}

}
