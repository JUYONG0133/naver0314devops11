package day0319;

import java.util.Date;

public class Ex09_DateCalendar {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Date 클래스를 이용해서 년,월,일,시,분,초 얻기(jdk1.1 이후 Deprecate 되고 Calender를 권장하나 여히 많이 사용중)
		Date date = new Date(); // 디폴트로 생성시 현재 날짜와 시간을 얻는다,
		int year = date.getYear()+1900;// 년도는 1900이 빠진 값으로 변환 그래서 1900을 더해줘야한다.
		int month = date.getMonth()+1; // 월은 0~11이 반환 그래서 1을 더해줘야한다.
		int day = date.getDate();
		int week = date.getDay();//요일 (0 : 일 ~ 6 : 토)
		int hour = date.getHours();
		int min = date.getMinutes();
		int sec = date.getSeconds();
		System.out.println("현재년도 : "+year);
		System.out.println("현재 월 : "+month);
		System.out.println("햔재 일 : "+day);
		System.out.println("현재 요일 : "+week+"("+(week==0?"일":week==1?"월":week==2?"화":week==3?"수":week==4?"목":week==5?"금":"토")+")");
		if(hour>=12) {
			hour=hour-12;
			System.out.printf("오후 %d시 %d분 %d초",hour,min,sec);
		}
		else System.out.printf("오전 %d시 %d분 %d초",hour,min,sec);
		
		System.out.println("\n==================================");
		System.out.println("Calendar를 이용해서 출력하기");
	}

}
