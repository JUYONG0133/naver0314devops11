import java.awt.Canvas;
import java.awt.FileDialog;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Ex08_SwingImage extends JFrame {
    final static String DEFAULT_PHOTO = "/Users/macbook/Desktop/naver0314/workall/image/image/1.jpg";
    JButton btnOpen;
    MyCanvas canvas;

    public Ex08_SwingImage(String title) {
        super(title);
        this.setLocation(100, 100);
        this.setSize(800, 600);
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        initDesign();
        this.setVisible(true);
    }

    class MyCanvas extends Canvas {
        Image image;

        public void loadImage(String photoPath) {
            try {
                File file = new File(photoPath);
                if (file.exists()) {
                    image = ImageIO.read(file);
                } else {
                    System.err.println("File not found: " + photoPath);
                }
            } catch (IOException e) {
                e.printStackTrace();
            }
        }

        @Override
        public void paint(Graphics g) {
            super.paint(g);
            if (image != null) {
                g.drawImage(image, 0, 0, this.getWidth(), this.getHeight(), this);
            }
        }
    }

    public void initDesign() {
        JPanel panel = new JPanel();
        btnOpen = new JButton("사진 열기");
        panel.add(btnOpen);
        this.add("North", panel);

        canvas = new MyCanvas();
        this.add("Center", canvas);

        btnOpen.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                FileDialog dialog = new FileDialog(Ex08_SwingImage.this, "사진 열기", FileDialog.LOAD);
                dialog.setVisible(true);
                String filename = dialog.getFile();
                if (filename != null) {
                    String filepath = dialog.getDirectory() + filename;
                    canvas.loadImage(filepath);
                    canvas.repaint();
                }
            }
        });
    }

    public static void main(String[] args) {
        Ex08_SwingImage viewer = new Ex08_SwingImage("간단 이미지 뷰어");
    }
}
