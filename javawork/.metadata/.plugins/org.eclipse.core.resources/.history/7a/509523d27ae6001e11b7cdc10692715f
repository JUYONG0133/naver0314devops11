package day0320;

import java.util.Scanner;

public class Ex09_ArraySearchString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		String []members = {"강호동","한가인","유재석","이승민","강하나","손미나","이영자","박남정","한지혜","손창민"};
		int searchIndex;
		String searchName;
		while(true) {
			searchIndex=-1;
			System.out.println("찾을 이름을 검색하세요.");
			searchName = sc.nextLine();
			for(int i = 0; i < members.length; i++) {
				if(searchName.equalsIgnoreCase("q"))
					break;
				else if(searchName==members[i]) {
					searchIndex = i;
					
				}
			}
			if(searchIndex==-1) {
				System.out.println("찾으시는 값이 없습니다.");
			}
			else {
				System.out.println("찾으시려는 값 : "+searchName+"은 "+searchIndex+"에 있습니다." );
			}

		}
	}

}
