package day0318;

import java.util.Scanner;

public class test {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a;
		a = sc.nextInt();
		for(int i = 1; i<=a; i++) {
			for(int j = 0; j<i;j++) {
				System.out.print(" ");
			}
			for(int j = i*2; j<(2*a)-1;j++) {
				System.out.print("*");
			}
			System.out.println();
			
			
		}
		for(int i=1;i<=a; i++) {
			for(int j=a-i;j<a;j++) {
				System.out.print("*");
			}
			
			for(int j = a-i; j>=1;j--) {
				System.out.print("1");
			}
			System.out.println();
		}
	}
}
